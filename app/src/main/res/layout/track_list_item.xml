<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="track"
            type="jp.ceed.kart.settings.model.entity.Track" />
        <variable
            name="trackListOperator"
            type="jp.ceed.kart.settings.ui.track.adapter.TrackListAdapter.TrackListOperator" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_m">

        <TextView
            android:id="@+id/trackNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/text_size_m"
            android:text="@{track.name}"
            android:visibility="@{trackListOperator.isEditable ? View.INVISIBLE : View.VISIBLE}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size_m"
            android:text="@string/edit"
            android:visibility="@{trackListOperator.isEditable ? View.INVISIBLE : View.VISIBLE}"
            android:onClick="@{v -> trackListOperator.onClickEdit()}"/>

        <EditText
            android:id="@+id/trackNameEditText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@={track.name}"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi"
            android:visibility="@{trackListOperator.isEditable ? View.VISIBLE : View.INVISIBLE}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size_m"
            android:text="@string/save"
            android:visibility="@{trackListOperator.isEditable ? View.VISIBLE : View.INVISIBLE}"
            android:onClick="@{v -> trackListOperator.onClickSave()}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>